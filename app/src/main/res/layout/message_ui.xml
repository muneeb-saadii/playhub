<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textAlignment="center"
            android:textSize="13sp"
            android:visibility="gone"
            android:paddingVertical="5dp"
            android:textColor="@color/app_themeColor_200"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftMsgArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_leftUserImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_no_pic_user"
            android:background="@color/app_themeColor_200"
            app:shapeAppearanceOverlay="@style/circleImageView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_message_bg"
                >
                <TextView
                    android:id="@+id/leftMsgTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hey there! i am using chats"
                    android:padding="10dp"
                    android:textColor="@color/app_themeColor_400"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/leftTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:40 pm"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/app_themeColor_300"
                android:layout_marginVertical="2dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightMsgArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_message_bg"
                >
                <TextView
                    android:id="@+id/rightMsgTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hey there! i am using chats"
                    android:padding="10dp"
                    android:textColor="@color/app_themeColor_200"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rightTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:40 pm"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/app_themeColor_300"
                android:layout_marginVertical="2dp"
                />
        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_rightUserImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_no_pic_user"
            android:background="@color/app_themeColor_200"
            app:shapeAppearanceOverlay="@style/circleImageView"
            />
    </LinearLayout>

</LinearLayout>