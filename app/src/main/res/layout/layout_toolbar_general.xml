<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/mainarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_all_corner_rounded"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/stratTimeTxtView"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"

            android:text="10 am - 11  "
            android:textColor="#202020"
            android:textSize="12sp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/endTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/selmainarea"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_all_corner_rounded"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">


        <TextView

            android:id="@+id/stratselTimeTxtView"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/appTheme_accent_light"
            android:gravity="center"
            android:text="10 - 11 AM"
            android:textColor="@color/white"
            android:textSize="12sp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/endselTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/driverUnselmainarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_all_corner_rounded"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/driverstratselTimeTxtView"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#dadada"
            android:gravity="center"
            android:text="10 am - 11"
            android:textColor="#202020"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/driverendselTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>